<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.heeexy.example.dao.TemplateDao">

    <insert id="addTemplate" parameterType="com.alibaba.fastjson.JSONObject">
        INSERT INTO message_template
            (template_name,template_content)
        VALUES
            (#{tname},#{content})
    </insert>
    <insert id="addChatTemplate" parameterType="com.alibaba.fastjson.JSONObject">
        insert into chat_message (chat_content,first_user_id,second_user_id)
        values

        <foreach collection="ulist" item="item" index="index" separator=",">
            (#{content},'1',#{item.id})
        </foreach>

    </insert>


    <select id="countTemplate" resultType="Integer">
        SELECT count(*)
        FROM message_template
    </select>

    <select id="listTemplate" resultType="com.alibaba.fastjson.JSONObject">
        SELECT
            w.template_id                                     id,
            w.template_name                                   tname,
            w.template_content                                content,
            date_format(w.create_time, '%Y.%m.%d %T')        createTime,
            date_format(w.update_time, '%Y.%m.%d %T')        updateTime
        FROM message_template w
        where w.status = '1'
        ORDER BY w.template_id DESC
        LIMIT #{offSet}, #{pageRow}
    </select>

    <select id="getAllUserId" resultType="com.alibaba.fastjson.JSONObject">
        SELECT
           id
        FROM test
    </select>

    <update id="updateTemplate" parameterType="com.alibaba.fastjson.JSONObject">
        UPDATE message_template
        SET
            template_content = #{content}
        WHERE template_id = #{id}
    </update>
    <update id="updateByStatus" parameterType="com.alibaba.fastjson.JSONObject">
        UPDATE message_template
        SET
            status = '2'
        WHERE template_id = #{id}
    </update>

    <select id="getTemplateByName" resultType="com.alibaba.fastjson.JSONObject">
        select
            w.template_id                                     id,
            w.template_name                                   tname
        from message_template w
        where w.template_name = #{tname} and  w.status = '1'
    </select>
    <select id="getTemplateById" resultType="com.alibaba.fastjson.JSONObject">
        select
            w.template_id                                     id,
            w.template_name                                   tname
        from message_template w
        where  w.status = '1' and w.template_name = #{tname} and  w.template_id != #{id}
    </select>
</mapper>